extends base

block content
  h1.margin-top-10px Tour Manage Page
  a.btn.btn--blue.btn--small#btn--new-tour(href='/tour/new') Create new tour
  table.tours-table 
    tr
      th name
      th actions
    each tour in tours
      tr(id=`${tour.id}`)
        td.tour-name= tour.name
        td
          a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) Show
          a.btn.btn--yellow.btn--small(href=`/tour/${tour.slug}/edit`) Edit
          button.btn.btn--red.btn--small.btn--delete-tour Delete